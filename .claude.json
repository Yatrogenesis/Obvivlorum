    "execution_modes": {
      "standard": {
        "description": "Basic IIT/GWT consciousness metrics",
        "entry_point": "ai_symbiote.py",
        "args": ["--mode=standard"],
        "features": ["neuroplasticity", "basic_consciousness", "security"],
        "dependencies_minimal": true
      },
      "topoespectro": {
        "description": "Topo-Spectral consciousness framework",
        "entry_point": "ai_symbiote.py", 
        "args": ["--mode=topoespectro"],
        "features": ["neuroplasticity", "topo_spectral", "research", "security"],
        "dependencies_full": true
      },
      "research": {
        "description": "Full research mode with both frameworks",
        "entry_point": "ai_symbiote.py",
        "args": ["--mode=research"],
        "features": ["neuroplasticity", "basic_consciousness", "topo_spectral", "benchmarks", "validation"],
        "dependencies_full": true
      },
      "gui": {
        "description": "GUI interface with mode selection",
        "entry_point": "ai_symbiote_gui.py",
        "args": [],
        "features": ["gui", "mode_selector", "all_frameworks"],
        "dependencies_gui": true
      }
    },

    "build_commands": {
      "test_standard": "python -m pytest tests/ -v",
      "test_research": "python -m pytest research_tests/ -m 'not slow'",
      "test_benchmark": "python -m pytest benchmarks/ --benchmark-only",
      "test_all": "python -m pytest tests/ research_tests/ benchmarks/",
      
      "lint": "ruff check . --fix",
      "typecheck": "mypy .",
      "format": "black .",
      
      "build_exe": "python -m PyInstaller --onefile ai_symbiote.py",
      "build_portable": "./CREATE_PORTABLE_VERSION.bat",
      "build_docker": "docker build -t obvivlorum .",
      
      "research_validation": "python benchmarks/validate_research_components.py",
      "consciousness_benchmark": "python benchmarks/benchmark_consciousness_metrics.py"
    },

    "environment_variables": {
      "OBVIVLORUM_MODE": {
        "description": "Default execution mode",
        "default": "standard",
        "options": ["standard", "topoespectro", "research", "gui"]
      },
      "OBVIVLORUM_USE_NUMBA": {
        "description": "Enable Numba acceleration for neuroplasticity",
        "default": "true",
        "type": "boolean"
      },
      "OBVIVLORUM_RESEARCH_DATA": {
        "description": "Path to research data directory",
        "default": "./research_data",
        "type": "path"
      },
      "OBVIVLORUM_LOG_LEVEL": {
        "description": "Logging verbosity",
        "default": "INFO",
        "options": ["DEBUG", "INFO", "WARNING", "ERROR"]
      }
    },

    "configuration_files": {
      "consciousness_metrics": "config/consciousness_config.json",
      "neuroplasticity": "config/neuroplasticity_config.json", 
      "topo_spectral": "config/topoespectral_config.json",
      "security": "config/security_config.json",
